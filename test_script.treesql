createtable users (id string primarykey, name string, age string)
createtable blog_posts (id string primarykey, title string, body string, author_id string referencestable users)
createtable comments (id string primarykey, post_id string referencestable blog_posts, body string, author_id string referencestable users)
many users { id, name, age } live
insert into users values ("0", "Alice", "24")
insert into users values ("1", "Bob", "24")
insert into blog_posts values ("0", "test post", "body of test post", "0")
insert into blog_posts values ("1", "another test post", "blalblalblabla", "1")
insert into comments values ("0", "0", "bloop doop comment", "0")
insert into comments values ("1", "0", "bloop doop another comment", "1")
insert into comments values ("2", "1", "yooooo", "0")
many blog_posts { id, title, body, author: one users { id, name, age }, comments: many comments { id, post_id, body, author: one users { id, name, age } } } live
insert into comments values ("3", "1", "live comment", "1")
update comments set body = "yooooo!" where id = "2"
update blog_posts set title = "test post?" where id = "0"
